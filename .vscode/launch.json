{
    "configurations": [
      {
        "name": "C/C++ Debug Session",
        "type": "cppdbg",
        "request": "launch",
        "args": [],
        "stopAtEntry": true,
        "externalConsole": false,
        "cwd": "${workspaceFolder}",
        "program": "${workspaceFolder}/helloworld",
        "MIMode": "gdb",
        "miDebuggerPath": "arm-ostl-linux-gnueabi-gdb",
        "miDebuggerServerAddress": "192.168.7.1:3333",
        "setupCommands": [
          {
            "description": "Enable pretty printing",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        },
        {
            "description": "Automatically continue after connecting",
            "text": "continue",
            "ignoreFailures": true
        },
        {
          "description": "Kill the gdbserver process",
          "text": "kill",
          "ignoreFailures": true
        }
        ],
        "targetArchitecture": "arm",
        "preLaunchTask": "Start gdbserver on remote",
        //"postDebugTask": "Stop gdbserver on remote",
      }
    ]
  }